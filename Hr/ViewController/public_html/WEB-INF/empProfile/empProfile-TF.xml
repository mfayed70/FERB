<?xml version="1.0" encoding="UTF-8" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-definition id="empProfile-TF">
    <template-reference>
      <document>/WEB-INF/page-gragment-template.xml</document>
      <id>page-gragment-template</id>
    </template-reference>
    <default-activity>ExecuteWithParams</default-activity>
    <data-control-scope>
      <shared/>
    </data-control-scope>
    <input-parameter-definition id="__1">
      <name>pOrgUserId</name>
      <value>#{pageFlowScope.pOrgUserId}</value>
      <class>java.lang.Integer</class>
    </input-parameter-definition>
    <input-parameter-definition id="__4">
      <name>pViewForUser</name>
      <value>#{pageFlowScope.pViewForUser}</value>
      <class>java.lang.Boolean</class>
    </input-parameter-definition>
    <managed-bean id="__5">
      <managed-bean-name>HrBean</managed-bean-name>
      <managed-bean-class>com.aalm.hr.view.beans.HrBean</managed-bean-class>
      <managed-bean-scope>pageFlow</managed-bean-scope>
    </managed-bean>
    <method-call id="ExecuteWithParams">
      <method>#{bindings.ExecuteWithParams.execute}</method>
      <outcome>
        <fixed-outcome>ExecuteWithParams</fixed-outcome>
      </outcome>
    </method-call>
    <view id="empProfile">
      <page>/WEB-INF/empProfile/empProfile.jsff</page>
    </view>
    <task-flow-call id="emp-submit-vacation-TF">
      <task-flow-reference>
        <document>/WEB-INF/emp-submit-vacation/emp-submit-vacation-TF.xml</document>
        <id>emp-submit-vacation-TF</id>
      </task-flow-reference>
      <input-parameter id="__8">
        <name>pEmpId</name>
        <value>#{pageFlowScope.pEmpId}</value>
      </input-parameter>
      <run-as-dialog>
        <display-type>
          <inline-popup/>
        </display-type>
      </run-as-dialog>
    </task-flow-call>
    <control-flow-rule id="__2">
      <from-activity-id>ExecuteWithParams</from-activity-id>
      <control-flow-case id="__3">
        <from-outcome>ExecuteWithParams</from-outcome>
        <to-activity-id>empProfile</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__6">
      <from-activity-id>empProfile</from-activity-id>
      <control-flow-case id="__7">
        <from-outcome>toSubmitVacation</from-outcome>
        <to-activity-id>emp-submit-vacation-TF</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <use-page-fragments/>
  </task-flow-definition>
</adfc-config>
