  <SQLQuery><![CDATA[SELECT 
       a.user_id,
       MONTHNAME(a.attendance_date) AS current_month,
       YEAR(a.attendance_date) AS current_year,
       a.status,
       COUNT(*) AS total_days
FROM   ATTENDANCE a
WHERE MONTHNAME(a.attendance_date) = MONTHNAME(CURDATE())
GROUP  BY a.user_id,
          MONTHNAME(a.attendance_date),
          YEAR(a.attendance_date),
          a.status
ORDER  BY a.user_id, current_year, current_month, a.status]]></SQLQuery>
