  <SQLQuery><![CDATA[SELECT 
    u.user_id as user_id,
    YEAR(CURDATE()) AS year,
    MONTHNAME(CURDATE()) AS month_name,
    COUNT(CASE WHEN DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 END) AS total_working_days,
    SUM(CASE WHEN a.status = 'ABSENT' AND DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 ELSE 0 END) AS absent_days,
    SUM(CASE WHEN a.status = 'LEAVE' AND DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 ELSE 0 END) AS leave_days,
    SUM(CASE WHEN a.status = 'PRESENT' AND DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 ELSE 0 END) AS present_days,
    ROUND(
        (SUM(CASE WHEN a.status = 'ABSENT' AND DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 ELSE 0 END) 
         / COUNT(CASE WHEN DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 END)) * 100, 2
    ) AS absent_percentage,
    ROUND(
        (SUM(CASE WHEN a.status = 'LEAVE' AND DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 ELSE 0 END) 
         / COUNT(CASE WHEN DAYOFWEEK(a.attendance_date) NOT IN (6,7) THEN 1 END)) * 100, 2
    ) AS leave_percentage
FROM ATTENDANCE a
JOIN (SELECT DISTINCT user_id FROM ATTENDANCE) u
  ON a.user_id = u.user_id
WHERE YEAR(a.attendance_date) = YEAR(CURDATE())
  AND MONTH(a.attendance_date) = MONTH(CURDATE())
GROUP BY u.user_id, year, month_name]]></SQLQuery>
